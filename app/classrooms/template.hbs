<div class="row">
  <div class="col s3">
    <h1 class="flow-text">Classrooms</h1>
    <div>
      Name: {{input value=name}}
      Description: {{input value=description}}
      <button {{action 'addClassroom'}}>Add</button>
    </div>
    {{#each model as |classroom|}}
      <p>{{classroom.name}}</p>
      <button>{{#link-to "classrooms.edit" classroom.id}}Edit{{/link-to}}</button>
      <button {{action 'deleteClassroom' classroom}}>Delete</button>
    {{/each}}
  </div>

  <div class="col s9">
    {{outlet}}
  </div>
</div>
